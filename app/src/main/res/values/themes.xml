<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UrPuppy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>


        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BottomNavigation" parent="Theme.UrPuppy" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat">
        <!-- Adiciona padding no topo para criar espaçamento entre o ícone e o texto -->
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavTextStyleInactive" parent="TextAppearance.AppCompat">
        <!-- Adiciona padding no topo para criar espaçamento entre o ícone e o texto -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>